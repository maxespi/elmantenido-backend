    <style>
      .stats-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 20px;
        margin-bottom: 40px;
      }

      .financial-summary {
        background: white;
        border-radius: 12px;
        padding: 30px;
        margin-top: 30px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
      }

      .financial-summary h2 {
        margin-bottom: 20px;
        color: #4a5568;
      }

      .summary-cards {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 20px;
      }

      .summary-card {
        padding: 20px;
        border-radius: 10px;
        text-align: center;
        color: white;
      }

      .summary-card.positive {
        background: linear-gradient(135deg, #48bb78, #38a169);
      }

      .summary-card.negative {
        background: linear-gradient(135deg, #ed8936, #dd6b20);
      }

      .summary-card h3 {
        margin: 0 0 10px 0;
        font-size: 1.1rem;
        opacity: 0.9;
      }

      .summary-card p {
        margin: 0 0 5px 0;
        font-size: 1.8rem;
        font-weight: bold;
      }

      .summary-card small {
        opacity: 0.8;
        font-size: 0.9rem;
      }

      @media (max-width: 768px) {
        .stats-grid {
          grid-template-columns: repeat(2, 1fr);
        }

        .summary-cards {
          grid-template-columns: 1fr;
        }
      }

      @media (max-width: 480px) {
        .stats-grid {
          grid-template-columns: 1fr;
        }
      }
    </style>
  </body>
</html>
